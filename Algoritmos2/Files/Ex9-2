procedimento InsereOrdenado(s1, s2, s3: string)
var
    f1, f2, f3: sequencia de real
    num1, num2: real
    acabou_seq1, acabou_seq2: lógico
    função atualiza(ref f: sequencia de real; num: real): lógico
    início
        se não fds(f) então
            leia(f, num)
            retorne falso
        senão
            retorne verdadeiro
        fim se
    fim função
início
    se abre(f1, s1) então
        se abre(f2, s2) então
            se cria(f3, s3) então
                acabou_seq1 <- atualiza(f1, num1)
                acabou_seq2 <- atualiza(f2, num2)
                enquanto não acabou_seq1 ou não acabou_seq2 faça
                    se acabou_seq2 ou (não acabou_seq1 e num1 > num2) então
                        escreva(f3, num2)
                        acabou_seq2 <- atualiza(f2, num2)
                    senão
                        escreva(f3, num1)
                        acabou_seq1 <- atualiza(f1, num1)
                    fim se
                fim enquanto
                fecha(f3)
            fim se
            fecha(f2)
        fim se
        fecha(f1)
    fim se
fim procedimento
