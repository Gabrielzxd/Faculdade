função ValoresAcimaDaMedia(nome: string): inteiro
var
    f: sequencia de string
    g: sequencia de real
    x: string
    y, media, soma: real
    qnt, i: inteiro
início
    se não abre(f, nome) então
        pare
    fim se
    soma <- 0
    i <- 0
    enquanto não fds(f) faça
        leia(f, x)
        se abre(g, x) então
            enquanto não fds(g) faça
                leia(g, y)
                soma <- soma + y
                i <- i + 1
            fim enquanto
        fim se
    fim enquanto
    reinicia(f)
    reinicia(g)
    qnt <- 0
    media <- soma/i
    enquanto não fds(f) faça
        leia(f, x)
        se abre(g, x) então
            enquanto não fds(g) faça
              leia(g, y)
              se y > media então
                  qnt <- qnt + 1
              fim se
            fim enquanto
            fecha(g)
        fim se
    fim enquanto
    fecha(f)
    retorne qnt
fim função
