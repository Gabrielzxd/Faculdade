tipos
    TChave = inteiro
    TInfo = registro
            valor: inteiro
            chave: TChave
        fim registro
    PNo = ponteiro para TNo
    TNo = registro
            info: TInfo
            prox: PNo
        fim registro
var
    função MediaAritmeticaListaEncadeada(ref l: PNo): real
    var
        soma, tam: inteiro
    início
        soma <- 0
        tam <- 0
        enquanto l != Nulo faça
            soma <- soma + l^info.valor
            tam <- tam + 1
            l <- l^prox
        fim enquanto
        retorne soma/tam
    fim função