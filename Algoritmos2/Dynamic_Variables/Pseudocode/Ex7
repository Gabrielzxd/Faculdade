tipos
    PNo = ponteiro para TNo
    TNo = registro
            info: inteiro
            prox: PNo
        fim registro
var
    função MediaAritmeticaListaEncadeada(l: PNo): real
    var
        soma, tam: inteiro
    início
        se l = Nulo então
            retorne 0
        fim se
        soma <- 0
        tam <- 1
        enquanto l != Nulo faça
            soma <- soma + l^.info
            tam <- tam + 1
            l <- l^prox
        fim enquanto
        retorne soma/tam
    fim função