tipos
    PNo = ponteiro para TNo
    TNo = registro
            info: real
            prev: PNo
            prox: PNo
        fim registro

função RemoveNaPosiçãoP(ref l: PNo; x: real): lógico
var
    função Remove(ant, l: PNo): lógico
    var
        lixo: PNo
    início
        se l = Nulo então
            retorne falso
        fim se
        se l^.info = x então
            lixo <- l
            se ant = Nulo então
                l <- l^.prox
            senão
                se l^.prox = Nulo então
                    l <- l^.prox
                senão
                    l <- l^.prox
                    l^.prev <- ant
                fim se
            fim se
            desaloca(lixo)
            retorne verdadeiro
        senão
            retorne Remove(l, l^.prox, i+1)
        fim se
    fim função
