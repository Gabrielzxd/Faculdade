tipos
    PNo = ponteiro para TNo
    TNo = registro
            info: string
            prox: PNo
        fim registro

função InsereNoFinal(ref l: PNo; x: string): lógico
var
    novo: PNo
início
    se l = Nulo então
        novo <- aloca(TNo)
        se novo = Nulo então
            retorne falso
        fim se
        novo^.prox <- l
        novo^.info <- x
        l <- novo
        retorne verdadeiro
    fim se
    retorne InsereNoFinal(l^.prox, x)
fim função