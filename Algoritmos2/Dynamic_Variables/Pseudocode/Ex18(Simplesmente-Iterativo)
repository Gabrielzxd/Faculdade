tipos
    PNo = ponteiro para TNo
    TNo = registro
            info: real
            prox: 
        fim registro

função InserirOrdenadoNaPosiçãoDada(ref l: PNo; p: inteiro; x: real): lógico
var
    novo: PNo
    i: inteiro
início
    se p <= 0 então
        retorne falso
    fim se
    i <- 1
    enquanto l != Nulo e i < p faça
        l <- l^.prox
        i <- i + 1
    fim enquanto
    se l = Nulo e i < p então
        retorne falso
    fim 
    novo <- aloca(TNo)
    se novo = Nulo então
        retorne falso
    fim se
    novo^.info <- x
    novo^.prox <- l
    l <- novo
    retorne verdadeiro
fim função