tipos
    TChave = inteiro
    TInfo = registro
            valor: real
            chave: TChave
        fim registro
    PNo = ponteiro para TNo
    TNo = registro
            info: TInfo
            prox: PNo
var
    função TamanhoListaEncadeada(ref l: PNo): inteiro
    início
        se l = Nulo então
            retorne 0
        fim se
        retorne 1 + TamanhoListaEncadeada(l^prox)
    fim função