tipos
    PNo = ponteiro para TNo
    TNo = registro
            info: string
            prox: PNo
        fim registro
var
    função MaiorValor(l: PNo): string
    var
        maior: string
    início
        se l = Nulo então
            retorne ""
        fim se
        se l^.prox = Nulo então
            retorne l^.info
        fim se
        maior <- MaiorValor(l^.prox)
        se l^.info > maior então
            maior <- l^.info
        fim se
        retorne maior
    fim função