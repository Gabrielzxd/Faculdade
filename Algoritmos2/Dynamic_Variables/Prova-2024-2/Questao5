tipos
    PNo = ponteiro para TNo
    TNo = registro
            info: real
            esq: PNo
            dir: PNo
        fim registro

procedimento InverteArvoreBinaria (ref l: PNo)
var
    aux: real
início
    se l != Nulo então
        aux <- l^.esq
        l^.esq <- l^.dir
        l^.dir <- aux
        InverteArvoreBinaria(l^.dir)
        InverteArvoreBinaria(l^.esq)
    fim se
fim procedimento