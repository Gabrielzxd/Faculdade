tipos
    PNo = ponteiro para TNo
    TNo = registro
            info: string
            esq: PNo
            dir: PNo
        fim registro

função InserirNaArvoreBinaria(ref l: PNo; ch: string): lógico
var
    novo, ant: PNo
início
    ant <- Nulo
    enquanto l != Nulo faça
        ant <- l
        se l^info < ch então
            l <- l^.dir
        senão
            se l^.info = ch então
                retorne falso
            senão
                l <- l^.esq
            fim se
        fim se
    fim enquanto
    novo <- aloca(TNo)
    se novo = Nulo então
        retorne falso
    fim se
    novo^.info <- ch
    novo^.esq <- Nulo
    novo^.dir <- Nulo
    se ant = Nulo então
        l <- novo
    fim se  
    se ant^.esq = Nulo então
        ant^.esq <- novo
    senão
        ant^.dir <- novo
    fim se
    retorne verdadeiro
fim função