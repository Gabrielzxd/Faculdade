const
    MAX = 100
tipos
    vet = vetor[1..MAX] de string
var
    função MenorString(nomes: vet; tam: inteiro): string
    var
        menor: string
    início
        se tam = 1 então
            retorne nomes[1]
        fim se
        menor <- MenorString(nomes, tam - 1)
        se nomes[tam] < menor então
            menor <- nomes[i]
        fim se
        retorne menor
    fim função