função TransformaParaDecimal(bin: inteiro): inteiro
var
    função VerificaBinario(bin: inteiro): lógico
    início
        se bin = 0 ou bin = 1 então
            retorne verdadeiro
        senão
            retorne falso
        fim se
        retorne VerificaBinario(bin div 10) e 0 <= bin mod 10 e bin mod 10 <= 1
    fim função
início
    se bin < 0 então
        se não(VerificaBinario(-bin)) então
            retorne -999999
        retorne - TransformaParaDecimal(-bin)
    se não(VerificaBinario(bin)) então
        retorne -999999
    fim se
    se bin == 0 ou bin == 1 então
        retorne bin
    fim se
    retorne TransformaParaDecimal(bin div 10)*2 + bin mod 10
fim função  