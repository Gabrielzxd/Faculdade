const
    flag = -1
var
    função QntVezesAlgarismoNoNumero(a, b: inteiro): inteiro
    var
        função Contagem(a, b: inteiro): inteiro
        início
            se a = 0 então
                retorne 0
            fim se
            se a mod 10 = b então
                retorne 1 + Contagem(a div 10, b)
            fim se
            retorne Contagem(a div 10, b)
        fim função
    início
        se a <= 0 ou b < 0 ou b > 9 então
            retorne flag
        fim se
        QntVezesAlgarismoNoNumero(a, b)
    fim função